{
  "name": "@us-legal-tools/govinfo-sdk",
  "version": "0.5.0",
  "description": "TypeScript SDK and MCP server for the GovInfo API",
  "author": "Aleksandr Beshkenadze <beshkenadze@gmail.com>",
  "license": "MIT",
  "keywords": [
    "govinfo",
    "government",
    "federal",
    "documents",
    "api",
    "sdk",
    "mcp",
    "typescript"
  ],
  "homepage": "https://github.com/beshkenadze/us-legal-tools#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beshkenadze/us-legal-tools.git",
    "directory": "packages/govinfo-sdk"
  },
  "bugs": {
    "url": "https://github.com/beshkenadze/us-legal-tools/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./mcp": {
      "types": "./dist/mcp/index.d.ts",
      "import": "./dist/mcp/index.mjs",
      "require": "./dist/mcp/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "bun run build.ts",
    "download": "bun run scripts/download-openapi.ts",
    "generate": "orval",
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "prepublishOnly": "bun run build",
    "test": "bun test src",
    "test:watch": "bun test --watch src",
    "test:integration": "SKIP_INTEGRATION_TESTS=false bun test src",
    "test:e2e": "bun test tests/e2e",
    "test:e2e:api": "bun test tests/e2e/api.e2e.test.ts",
    "test:e2e:mcp": "bun test tests/e2e/mcp-server.e2e.test.ts",
    "test:all": "bun test",
    "mcp:server": "bun run src/mcp/server.ts",
    "docs:generate": "bunx typedoc"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "@types/node": "^24.1.0",
    "@us-legal-tools/tsconfig": "workspace:*",
    "orval": "^7.10.0",
    "typedoc": "^0.28.8",
    "typedoc-plugin-markdown": "^4.8.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.11.0",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
