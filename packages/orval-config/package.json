{
  "name": "@us-legal-tools/orval-config",
  "version": "1.0.0",
  "description": "Shared Orval and TypeScript configurations for US Legal Tools SDK packages",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "bun": "./src/index.ts",
      "import": "./src/index.ts",
      "require": "./src/index.ts",
      "types": "./src/index.ts",
      "default": "./src/index.ts"
    }
  },
  "files": [
    "src",
    "tsconfig.sdk.json",
    "tsconfig.mcp.json",
    "tsconfig.build.json",
    "typedoc.json"
  ],
  "scripts": {
    "format": "biome format --write .",
    "lint": "biome lint --write .",
    "check": "biome check --write .",
    "check:ci": "biome ci .",
    "test": "echo 'No tests yet for orval-config'",
    "test:watch": "bun test --watch src"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "orval": "^7.10.0",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
